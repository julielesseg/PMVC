	    <div class="global-text container_12">
		    
	    </div>
    </div>
    <div class="container_12">
	    <footer>
	    	<div class="button">
		    <%= link_to "donate", "", class: "nav-link offset_1 grid_2" %>
	    	</div>
	    	<div class="social">
			<%= link_to(image_tag("/images/logo.svg", :alt => "logo", :title => "Home"), "/") %>
